@model Prenotazione;

@{
    ViewData["Title"] = "SignUp";
}

<form  asp-action="Conferma" method="post">
    <div>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" class="form-control" required>
    </div>
    <div>
        <label asp-for="Cognome">Cognome:</label>
        <input asp-for="Cognome" class="form-control" required>
    </div>
    <div>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" type="email" class="form-control" required>
    </div>
    <div>
        <label asp-for="Sesso">Sesso:</label>
        <label>Maschio</label>
        <input asp-for="Sesso" type="radio" value="Maschio" name="sesso">
        <label>Femmina</label>
        <input asp-for="Sesso" type="radio" value="Femmina"  name="sesso" >
        <label>Non rispondo</label>
        <input asp-for="Sesso" type="radio" value="Non rispondo" name="sesso">
        
    </div>
    <div>
        <label asp-for="DataNascita">Data di Nascita:</label>
        <input asp-for="DataNascita" type="date" class="form-control" name="DataNascita" required>
    </div>
    <div>
        <select id="Seleziona ruolo" name="ruolo"  class="form-control" >
        <option value="Studente">Studente</option>
        <option value="Insegnante">Insegnante</option>
        <option value="Genitore">Genitore</option>
        </select>
        
    </div>
    <div>
        <button type="submit">Prenota</button>
    </div>
</form>

